# R2R Enhanced Configuration Template
# Copy this to r2r-full.env and add your API keys

# R2R Core
R2R_PORT=7272
R2R_HOST=0.0.0.0
R2R_LOG_LEVEL=INFO
R2R_CONFIG_NAME=full
R2R_SECRET_KEY=your_secret_key_here

# Database Configuration
# Option 1: Local Postgres (for development)
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
# POSTGRES_DB=r2r
# POSTGRES_HOST=postgres
# POSTGRES_PORT=5432

# Option 2: Supabase (recommended for production)
POSTGRES_HOST=your-project-ref.supabase.co
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_supabase_password_here
POSTGRES_PORT=5432

# Supabase additional settings
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Hatchet
HATCHET_CLIENT_TLS_STRATEGY=none

# OpenAI - REQUIRED for main functionality
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=

# Anthropic - REQUIRED for planning agent
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Additional AI Providers
XAI_API_KEY=
AZURE_API_KEY=
GEMINI_API_KEY=
MISTRAL_API_KEY=
GROQ_API_KEY=
COHERE_API_KEY=

# Optional: Web Search (enhances research capabilities)
SERPER_API_KEY=your_serper_key_for_google_search
TAVILY_API_KEY=your_tavily_key_for_web_search
FIRECRAWL_API_KEY=

# Optional: Email notifications
MAILERSEND_API_KEY=
SENDGRID_API_KEY=

# Optional: Error tracking
R2R_SENTRY_DSN=
R2R_SENTRY_ENVIRONMENT=development
